<MainLayout>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    MapView:
        id: mapview
        lat: 52.5200
        lon: 13.4050
        zoom: 12
        size_hint_y: 0.7

    BoxLayout:
        size_hint_y: 0.2
        spacing: 10

        Button:
            text: "Start"
            on_release: root.start_tracking()
            id: start_btn
            disabled: root.gps_started or root.mock_active

        Button:
            text: root.ids.pause_resume_btn.text if root.ids.pause_resume_btn else "Pause"
            on_release: root.pause_or_resume_tracking()
            id: pause_resume_btn
            disabled: not (root.gps_started or root.mock_active) and len(root.track_points) == 0

        Button:
            text: "Stop"
            on_release: root.stop_tracking()
            id: stop_btn
            disabled: not (root.gps_started or root.mock_active)

        Button:
            text: "Speichern"
            on_release: root.save_track()
            id: save_btn
            disabled: len(root.track_points) == 0

        Button:
            text: "Laden"
            on_release: root.open_filechooser()
            id: load_btn

        Button:
            text: "Reset"
            on_release: root.reset_tracking()
            id: reset_btn
            disabled: len(root.track_points) == 0

    BoxLayout:
        size_hint_y: 0.1
        spacing: 10

        Label:
            id: coords_label
            text: "Latitude: - , Longitude: -"
            size_hint_x: 0.5

        Label:
            id: distance_label
            text: "Distanz: 0.0 km"
            size_hint_x: 0.3

        Label:
            id: speed_label
            text: "Geschwindigkeit: 0.0 km/h"
            size_hint_x: 0.3

    Label:
        id: status_label
        text: root.status_text
        size_hint_y: 0.05
