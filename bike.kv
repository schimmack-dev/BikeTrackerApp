<MainLayout>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    MapView:
        id: mapview
        lat: 52.5200
        lon: 13.4050
        zoom: 12
        size_hint_y: 0.7

    BoxLayout:
        size_hint_y: 0.3
        orientation: "vertical"
        spacing: 10

        BoxLayout:
            spacing: 10

            Button:
                text: "‚ñ∂ Start"
                on_release: root.start_tracking()

            Button:
                id: pause_resume_btn
                text: "‚è∏ Pause"
                disabled: True
                on_release: root.pause_or_resume_tracking()

            Button:
                id: stop_btn
                text: "‚ñ† Stop"
                disabled: True
                on_release: root.stop_tracking()

            Button:
                id: reset_btn
                text: "‚Ü∫ Reset"
                disabled: True
                on_release: root.reset_tracking()

        BoxLayout:
            spacing: 10

            Button:
                text: "üíæ Speichern"
                on_release: root.save_track()

            Button:
                text: "üìÇ Laden"
                on_release: root.open_filechooser()

        BoxLayout:
            spacing: 10

            Label:
                id: status_label
                text: root.status_text
                size_hint_x: 1
                color: 1, 0, 0, 1

            Label:
                id: distance_label
                text: "Distanz: 0.0 km"

            Label:
                id: speed_label
                text: "Geschwindigkeit: 0.0 km/h"

            Label:
                id: coords_label
                text: "Latitude: - , Longitude: -"
